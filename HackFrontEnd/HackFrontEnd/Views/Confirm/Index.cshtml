@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CAT Notification System</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/styles.css" rel="stylesheet">
    <script>
        document._appPath = '@Request.ApplicationPath';
    </script>
</head>

<body>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">ERIE Insurance</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Agent", "Index", "Agent")</li>
                <li>@Html.ActionLink("CAT Van", "Index", "CatVan")</li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Welcome, Home Office User <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                    </ul>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="alert alert-success" role="alert">
    <div class="container">
        <h4><span class="glyphicon glyphicon-check"></span> <b>Notifications have been sent! <span class=" glyphicon glyphicon-remove align-right"></span></b></h4>
    </div>
</div>


<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron  header-section">
    <div class="container">
        <h1>Catastrophe Notification System</h1>
        <p></p>
        <p>Welcome to ERIE Insurance's Agent Catastrophe Notification System. This system will allow you to track Catastrophe's earlier and more precisely to help notify your poliyholders of an impending Catastrophic Event.
    </div>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-md-8">
            <h2>Track Catastrophe</h2>
            <p>Follow live updates of Catastrophe location. </p>
            <a href="http://weather.com" target="_blank"><img class="img-responsive" src="~/Content/Images/footprint_weather.png"/></a>

        </div>
        <div class="col-md-4">

        </div>

        <div class="col-md-4">

            <h2>Track ERIE Catastrophe Notification</h2>

            <div class="list-group">
                <a href="#" class="list-group-item warning-red">
                    <b>Level Red - Catastrophe Declared - 12:30pm - Notification Sent</b>
                </a>
                <a href="#" class="list-group-item warning-yellow">Level Yellow - 12:25pm</a>
                <a href="#" class="list-group-item warning-yellow">Level Yellow - 12:20pm</a>
                <a href="#" class="list-group-item warning-yellow">Level Yellow - 12:18pm</a>
                <a href="#" class="list-group-item warning-yellow">Level Yellow - 12:15pm</a>
            </div>

            <p><a class="btn btn-default" href="#" role="button">View more... &raquo;</a>
            </p>
        </div>
    </div>
    <hr>
</div> <!-- /container -->
<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="~/Scripts/lib/jquery/jquery-2.2.4.js"></script>
<script src="~/Scripts/lib/bootstrap/bootstrap.js"></script>
</body>
</html>